    [Within streaming region: <AsyncComponent WaitFor="@WithinStreamingRegionTask" />]
    <DisableStreaming>
        [Within nested nonstreaming region: <AsyncComponent WaitFor="@WithinNestedNonstreamingRegionTask" />]
